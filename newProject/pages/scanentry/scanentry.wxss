/* pages/scanentry/scanentry.wxss */
.container .page-body {
  margin: 30rpx;
}

.container .linkBtn {
  margin-top: 120rpx;
  margin-bottom: 100px;
}

.container .linkBtn button {
  background-image: linear-gradient(128deg, #27DB94 0%, #14D2B8 100%);
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
  border: 1px solid #5BE6A7;
}

.container .page-section {
  background: #023941;
  box-shadow: 0 16rpx 40rpx 0 rgba(0, 0, 0, 0.30);
  border-radius: 16rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.container .page-section .page-section-title {
  opacity: 0.65;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 40rpx;
  display: inline-block;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.childComponent {
  margin-top: 30rpx;
}

.container .page-section .weui-input {
  text-align: right;
  color: #fff;
  font-size: 28rpx;
}

.container .page-section .inputValue {
  display: inline-block;
  float: right;
}

.container .page-section .inputValue image {
  width: 40rpx;
  height: 40rpx;
}

.iconInfo {
  width: 26px;
  height: 22px;  
}

.page-section1 {
  background: #023941;
  box-shadow: 0 16rpx 40rpx 0 rgba(0, 0, 0, 0.30);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  font-size:28rpx;
}
.page-section1  .page-section-title{
  display: flex;
  justify-content:space-between;
  color: #fff;
}
.page-section1  .page-section-title .weui-input{
  text-align: right;
  color: #fff;
}


/* 扫描录入 */
.q-image-wrap{
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
  border-radius:10px;
}
.q-image-remover{
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
  position: absolute;
  top: -11rpx;
  right: 8rpx;
  
}
.q-image-remover icon{
  position: absolute;
  left:12rpx;
  bottom:12rpx;
  color:#fff;
}
 
.uploadImgBtn{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 140rpx;
  border: 6rpx solid #f0f0f0;
  float: left;
}
.uploadImgBtn icon{
  font-size: 80rpx;
  color: #999;
}
.question-images{
  margin-bottom: 20px;
  margin-top: 20px;
}
.clearfix{
  clear: both;
}